	<script type="text/javascript">
		gadgets.util.registerOnLoadHandler(function() {
			document.getElementById('__MODULE_ID__Greeting').innerHTML = 'img: ' + gadgets.views.getParams()['img'] + '<br />msg:' + gadgets.views.getParams()['msg'];
